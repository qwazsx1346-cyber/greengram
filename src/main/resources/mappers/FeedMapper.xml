<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.greengram.application.feed.FeedMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="feedId">
        INSERT INTO feed
            SET location = #{location}
                ,contents = #{contents}
                ,user_id = #{signedUserId}
    </insert>

    <insert id="savePics">
        INSERT INTO feed_pic
        ( feed_id, pic )
        VALUES
        <!--
        <foreach collection="picSavedNames" item="item" open="(" close=")" separator="), (">
            #{feedId}, #{v}
        </foreach>
        -->
        <foreach collection="picSavedNames" item="v" separator=",">
            ( #{feedId}, #{v} )
        </foreach>
    </insert>

</mapper>